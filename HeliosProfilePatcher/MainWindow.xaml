<Window x:Class="HeliosProfilePatcher.MainWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
Title="Helios Profile Patcher" Height="420" Width="640">


    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <!-- File selection -->
        <StackPanel Orientation="Horizontal" Margin="10,10,10,10">
            <Button Content="Open Profile" Width="120" Click="OpenXml_Click" />
            <TextBlock x:Name="FilePathText" Margin="10,10,10,10" VerticalAlignment="Center" />
        </StackPanel>


        <GroupBox Header="Variable Substitutions" Grid.Row="1" Margin="10,10,10,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Label Grid.Column="0" Grid.Row="0" Content="$(HeliosPath) = " VerticalAlignment="Center" HorizontalAlignment="Right"/>
                <TextBox Grid.Column="1" Grid.Row="0" x:Name="HeliosPathBox" Text="{Binding Path=HeliosPathValue, Mode=TwoWay}" Width="320" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <Label Grid.Column="0" Grid.Row="1" Content="$(VehicleName) = " VerticalAlignment="Center" HorizontalAlignment="Right"/>
                <TextBox Grid.Column="1" Grid.Row="1" x:Name="Var0Box" Text="{Binding Path=VehicleValue, Mode=TwoWay}" Width="320" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <Label Grid.Column="0" Grid.Row="2" Content="$(var1) = " VerticalAlignment="Center"  HorizontalAlignment="Right"/>
                <TextBox Grid.Column="1" Grid.Row="2" x:Name="Var1Box" Text="{Binding Path=Var1, Mode=TwoWay}" Width="320" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <Label Grid.Column="0" Grid.Row="3" Content="$(var2) = " VerticalAlignment="Center"  HorizontalAlignment="Right"/>
                <TextBox Grid.Column="1" Grid.Row="3" x:Name="Var2Box" Text="{Binding Path=Var2, Mode=TwoWay}" Width="320" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <Label Grid.Column="0" Grid.Row="4" Content="$(var3) = " VerticalAlignment="Center"  HorizontalAlignment="Right"/>
                <TextBox Grid.Column="1" Grid.Row="4" x:Name="Var3Box" Text="{Binding Path=Var3, Mode=TwoWay}" Width="320" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            </Grid>
        </GroupBox>


        <Button Grid.Row="2" Content="Patch" Height="30" Width="120" Margin="10,10,10,10" HorizontalAlignment="Left"
VerticalAlignment="Top" Click="PatchXml_Click" />

        <!-- Save -->
        <Button Grid.Row="3" Content="Save Profile" Height="30"  Width="120" Margin="10,10,10,10" HorizontalAlignment="Left" VerticalAlignment="Top" Click="SaveXml_Click" />
    </Grid>
</Window>