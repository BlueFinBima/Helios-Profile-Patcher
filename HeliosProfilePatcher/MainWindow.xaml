<Window x:Class="HeliosProfilePatcher.MainWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
Title="Helios Profile Patcher" Height="500" Width="640">


    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <!-- File selection -->
        <StackPanel Orientation="Horizontal" Margin="10,10,10,10">
            <Button Content="Open Profile" Width="120" Click="OpenXml_Click" />
            <TextBlock x:Name="FilePathText" Margin="10,10,10,10" VerticalAlignment="Center" />
        </StackPanel>


        <GroupBox Header="Variable Substitutions" Grid.Row="1" Margin="10,10,10,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Label Grid.Column="0" Grid.Row="0" Content="$(HeliosPath) = " VerticalAlignment="Center" HorizontalAlignment="Right"/>
                <TextBox Grid.Column="1" Grid.Row="0" x:Name="HeliosPathBox" Text="{Binding Path=HeliosPathValue, Mode=TwoWay}" Width="320" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <Label Grid.Column="0" Grid.Row="1" Content="$(VehicleName) = " VerticalAlignment="Center" HorizontalAlignment="Right"/>
                <TextBox Grid.Column="1" Grid.Row="1" x:Name="Var0Box" Text="{Binding Path=VehicleValue, Mode=TwoWay}" Width="320" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <Label Grid.Column="0" Grid.Row="2" Content="$(var1) = " VerticalAlignment="Center"  HorizontalAlignment="Right"/>
                <TextBox Grid.Column="1" Grid.Row="2" x:Name="Var1Box" Text="{Binding Path=Var1, Mode=TwoWay}" Width="320" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <Label Grid.Column="0" Grid.Row="3" Content="$(var2) = " VerticalAlignment="Center"  HorizontalAlignment="Right"/>
                <TextBox Grid.Column="1" Grid.Row="3" x:Name="Var2Box" Text="{Binding Path=Var2, Mode=TwoWay}" Width="320" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <Label Grid.Column="0" Grid.Row="4" Content="$(var3) = " VerticalAlignment="Center"  HorizontalAlignment="Right"/>
                <TextBox Grid.Column="1" Grid.Row="4" x:Name="Var3Box" Text="{Binding Path=Var3, Mode=TwoWay}" Width="320" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            </Grid>
        </GroupBox>

        <GroupBox Header="Send Key Substitutions" Grid.Row="2" Margin="10,10,10,10" AutomationProperties.HelpText="Allows a character by character replacement of send keys static values">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160" />
                    <ColumnDefinition Width="280" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Label Grid.Column="0" Content="Original Characters" VerticalAlignment="Center" HorizontalAlignment="Right" AutomationProperties.HelpText="The number of characters must equal the number of replacement characters" Margin="8,0,0,0"/>
                <TextBox Grid.Column="1" x:Name="OriginalBox" Text="{Binding Path=OriginalCharactersValue, Mode=TwoWay}" Width="280" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <Label Grid.RowSpan="3" Grid.Column="2" Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Left">
                    <Label.Content>
                        <AccessText TextWrapping="Wrap" Text="{Binding Path=CharMessage, Mode=OneWay}" Foreground="Red"/>
                    </Label.Content>
                </Label>
                <Label Grid.Column="0" Grid.Row="1" Content="Replacement Characters" VerticalAlignment="Center" HorizontalAlignment="Left" AutomationProperties.HelpText="The number of characters must equal the number of original characters" Grid.ColumnSpan="2" Margin="22,0,0,0"/>
                <TextBox Grid.Column="1" Grid.Row="1" x:Name="ReplacementBox" Text="{Binding Path=ReplacementCharactersValue, Mode=TwoWay}" Width="280" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            </Grid>
        </GroupBox>

        <Button Grid.Row="3" Content="Patch" Height="30" Width="120" Margin="10,10,10,10" HorizontalAlignment="Left"
            VerticalAlignment="Top" Click="PatchXml_Click" IsEnabled="{Binding PatchEnabled, Mode=OneWay}" />

        <!-- Save -->
        <Button Grid.Row="4" Content="Save Profile" Height="30"  Width="120" Margin="10,10,10,10" HorizontalAlignment="Left" VerticalAlignment="Top" Click="SaveXml_Click" />
    </Grid>
</Window>